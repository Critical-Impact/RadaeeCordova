<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_bar_background_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/navigation_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name" />

    <it.almaviva.cordovaplugins.CustomFontButton
        android:id="@+id/navigation_bar_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:padding="0dp"
        style="?android:attr/buttonStyleSmall"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible" />

    <ImageView
         android:id="@+id/navigation_bar_center_image"
         android:layout_width="55dip"
         android:layout_height="35dip"
         android:layout_centerInParent="true"
         android:contentDescription="@string/app_name"
         android:visibility="invisible" />

     <it.almaviva.cordovaplugins.CustomFontTextView
         android:id="@+id/navigation_bar_txv_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:paddingLeft="50dp"
         android:paddingRight="5dp"
         android:textStyle="bold"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:visibility="invisible" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:paddingRight="10dip" >
         <it.almaviva.cordovaplugins.CustomFontButton
	         android:id="@+id/navigation_bar_button_right"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:visibility="invisible"
	         android:padding="0dp"
	         style="?android:attr/buttonStyleSmall"
	         android:gravity="center"/>
     </LinearLayout>
    <LinearLayout
        android:id="@+id/navigation_bar_bottom_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dip"
        android:background="@android:color/white">
    </LinearLayout>
</RelativeLayout>